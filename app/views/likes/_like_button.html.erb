<% if current_user.like?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: { method: :delete }) do |form| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= form.submit 'Unlike', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |form| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= form.submit 'Like', class: 'btn btn-default btn-xs' %>
  <% end %>
<% end %>
